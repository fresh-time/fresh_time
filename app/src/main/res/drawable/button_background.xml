<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#F5F5F5"/> <!-- 버튼이 눌렸을 때 밝은 회색 배경 -->
            <corners android:radius="12dp"/> <!-- 둥근 모서리 반경을 12dp로 설정 -->
            <stroke
                android:width="2dp"
                android:color="#DDDDDD"/> <!-- 연한 회색 테두리 -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F5F5F5"/> <!-- 기본 상태의 밝은 회색 배경 -->
            <corners android:radius="12dp"/> <!-- 둥근 모서리 반경을 12dp로 설정 -->
            <stroke
                android:width="2dp"
                android:color="#DDDDDD"/> <!-- 연한 회색 테두리 -->
        </shape>
    </item>
</selector>
